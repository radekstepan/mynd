<div class="group" style="display:inline-block;margin:0 5px 10px 0">
    <label><%= @label %></label>
    <% if @possible.length > 1: %>
        <select name="<%= @label %>" class="span2">
            <% for v in @possible: %>
                <option value="<%= v %>" <%= 'selected="selected"' if @selected is v %>>
                    <%= v %>
                </option>
            <% end %>
        </select>
    <% else: %>
        <%= @possible[0] %>
    <% end %>
</div>